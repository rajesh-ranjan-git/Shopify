generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  role     String @default("user")
}

model Products {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String  @unique
  description String
  category    String
  brand       String
  price       Int
  salePrice   Int?
  totalStock  Int
  image       String?
}
